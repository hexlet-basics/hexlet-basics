{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/*.json",
      "!**/*.css",
      "!**/*.scss",
      "!test",
      "!public",
      "!app/assets/builds",
      "!app/javascript/generated",
      "!app/javascript/routes.*",
      "!app/javascript/types/serializers"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off"
      },
      "correctness": {
        "noUnusedImports": "off",
        "noUnusedFunctionParameters": "off",
        "noUnusedVariables": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  }
}
